# build stage
FROM node:18 AS build

WORKDIR /app

COPY package*.json ./

RUN npm install

COPY . .

RUN npm run build

# production stage
FROM nginx:alpine

# Copia build del frontend
COPY --from=build /app/build /usr/share/nginx/html

# Copia configuraci√≥n personalizada de nginx
COPY nginx/default.conf /etc/nginx/conf.d/default.conf

EXPOSE 80
